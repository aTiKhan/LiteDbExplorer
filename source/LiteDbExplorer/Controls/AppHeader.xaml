<UserControl x:Class="LiteDbExplorer.Controls.AppHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LiteDbExplorer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">

        <Image Height="42" Stretch="Uniform" Margin="4,0,8,0"
               Source="{StaticResource AppIconImage}" SnapsToDevicePixels="True"/>

        <TextBlock FontWeight="Light" FontSize="34"
                   Text="LiteDB Explorer" Margin="0,10,8,0" 
                   SnapsToDevicePixels="True"/>
        <Border Margin="8,7" Padding="8,3" CornerRadius="3" VerticalAlignment="Bottom"
                Background="{DynamicResource AccentColorBrush}">
            <TextBlock FontWeight="Normal" 
                       Text="Preview" Foreground="White" 
                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                       SnapsToDevicePixels="True"/>
        </Border>
    </StackPanel>
</UserControl>
